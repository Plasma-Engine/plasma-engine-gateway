{
  "name": "@plasma-engine/gateway",
  "version": "1.2.0",
  "description": "Apollo GraphQL Gateway for Plasma Engine microservices",
  "main": "dist/gateway.js",
  "types": "dist/gateway.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/gateway.ts",
    "start": "node dist/gateway.js",
    "start:dev": "NODE_ENV=development tsx src/gateway.ts",
    "start:prod": "NODE_ENV=production node dist/gateway.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t plasma-engine-gateway .",
    "docker:run": "docker run -p 4000:4000 plasma-engine-gateway",
    "health": "curl -f http://localhost:4000/health || exit 1",
    "clean": "rm -rf dist coverage node_modules/.cache"
  },
  "keywords": [
    "graphql",
    "apollo",
    "gateway",
    "federation",
    "microservices",
    "typescript"
  ],
  "author": "Plasma Engine Team",
  "license": "MIT",
  "dependencies": {
    "@apollo/gateway": "^2.11.2",
    "@apollo/server": "^5.0.2",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.7.0",
    "express-rate-limit": "^7.4.0",
    "http-proxy-middleware": "^3.0.2",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "graphql": "^16.11.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.16.10",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plasma-engine-org/plasma-engine-gateway"
  },
  "bugs": {
    "url": "https://github.com/plasma-engine-org/plasma-engine-gateway/issues"
  },
  "homepage": "https://github.com/plasma-engine-org/plasma-engine-gateway#readme"
}